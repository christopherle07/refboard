{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EyeDea",
  "version": "2.1.0",
  "identifier": "site.anihaven.eye",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "EyeDea",
        "fullscreen": false,
        "maximized": true,
        "dragDropEnabled": false,
        "decorations": false

      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main window",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-is-maximized",
            "core:webview:allow-create-webview-window",
            "core:webview:allow-create-webview",
            "core:webview:default",
            "core:app:allow-version",
            "opener:default",
            "updater:default",
            "updater:allow-check",
            "updater:allow-download-and-install"
          ]
        },
        {
          "identifier": "floating-capability",
          "description": "Capability for floating windows",
          "windows": ["floating_*"],
          "permissions": [
            "core:window:allow-close",
            "core:window:allow-minimize",
            "core:window:allow-set-always-on-top"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/AniHvn/AniReference/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    }
  }
}